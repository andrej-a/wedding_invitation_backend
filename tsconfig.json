{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "moduleResolution": "node",
        "declaration": true,
        "outDir": "./build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "useUnknownInCatchVariables": false,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "allowJs": true,
        "baseUrl": ".",
        "resolveJsonModule": true,
    },
    "include": ["src/**/*"]
}
